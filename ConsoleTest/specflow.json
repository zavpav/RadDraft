{
  "$schema": "https://specflow.org/specflow-config.json",
  "language": {
    "feature": "ru-RU",
    "tool": "ru-RU"
  },
  "generator": {
    "allowDebugGeneratedFiles": true
  },
  "bindingCulture": {
    "name": "ru-RU" 
  },
  "runtime": {
    "stopAtFirstError": true,
    "missingOrPendingStepsOutcome": "Inconclusive"
  },
  "trace": { "traceSuccessfulSteps": true }
  
}
